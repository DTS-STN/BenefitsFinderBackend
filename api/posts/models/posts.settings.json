{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Posts"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Title_EN": {
      "type": "string"
    },
    "Title_FR": {
      "type": "string"
    },
    "Content_EN": {
      "type": "richtext"
    },
    "Content_FR": {
      "type": "richtext"
    },
    "PreviewImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "PreviewText": {
      "type": "text"
    },
    "tags": {
      "collection": "tags",
      "via": "posts"
    },
    "UniqueID": {
      "type": "string",
      "required": true,
      "unique": true
    }
  }
}
